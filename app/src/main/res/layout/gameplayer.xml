<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/livepseudo2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/testbtn2"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Chiya no Yuuki"
        android:textColor="@android:color/background_light"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/livechamp2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/champ_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#33000000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/summ1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/spell_14" />

                    <ImageView
                        android:id="@+id/summ2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/spell_4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/black"
                    android:orientation="vertical"
                    android:paddingStart="5dp">

                    <LinearLayout
                        android:id="@+id/items1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/item1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />

                        <ImageView
                            android:id="@+id/item2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />

                        <ImageView
                            android:id="@+id/item3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/items2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/item4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />

                        <ImageView
                            android:id="@+id/item5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />

                        <ImageView
                            android:id="@+id/item6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/item_3637" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/livescore2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/black"
                        android:gravity="center"
                        android:text="12.7/6.2/9.4"
                        android:textColor="@android:color/background_light"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/honorable"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/testbtn2"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="Honor"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>