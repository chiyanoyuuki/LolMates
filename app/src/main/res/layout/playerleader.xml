<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutleader"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#D0202020"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leaderrank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/testbtn22"
            android:text="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leadername"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/testbtn2"
            android:paddingStart="5dp"
            android:text="Chiya no Yuuki"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/leaderkda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="5.6"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/winsloses2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="22/10"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/classhonors2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="6"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/classscore2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="76.94"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>