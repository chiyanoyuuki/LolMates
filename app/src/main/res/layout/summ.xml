<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/black"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/summicon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/icone_10" />

        <TextView
            android:id="@+id/summtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="New Summoner :"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/summtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your Summoner Name ?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/summedit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Summoner Name ..."
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark" />

        <Spinner
            android:id="@+id/summspinn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:entries="@array/regions"
            android:spinnerMode="dropdown" />

    </LinearLayout>

</LinearLayout>